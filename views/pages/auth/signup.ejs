<%- include('../../partials/head.ejs') %> 
<div class="container my-container my-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
           <div class="card">
               <div class="card-body">
                <h4 class="card-title">Create a new account</h4>
                <form action="/auth/signup" method="POST">
                    <div class="form-group">
                        <label for="username">Enter your username (Must be Unique)</label>
                        <input type="text" name="username" id="username" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="email">Enter your valid email</label>
                        <input type="email" name="email" id="email" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="password">Enter a strong password</label>
                        <input type="password" name="password" id="password" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Confirm Password</label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required>
                    </div>
                    <input type="submit" value="Signup" class="btn btn-primary">
                </form>
                <a class="pt-2 d-block text-center" href="/auth/login">Already have account, login here</a>
               </div>
           </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer.ejs') %> 
</body>
</html>